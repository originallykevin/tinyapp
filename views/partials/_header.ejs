<header>

  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>

      </div>
    </div>
    <!-- If no username is found then the login button with username input will be available -->

    <% if(!user){ %>

      <div class="form-inline">
        <div class="d-grid gap-2 d-md-block">
          <a href="/register" class="btn btn-success" tabindex="-1" role="button">Register</a>
          <a href="/login" class="btn btn-success" tabindex="-1" role="button">Login</a>
        </div>
      </div>

      <!-- if username is found, there is the option to logout of that username  -->
      <% } else{ %>
        <form class="form-inline" method="POST" action="/logout">
          <label>Logged in as: <%=user.email%></label>
          <button type="submit" class="btn btn-success">Logout</button>
        </form>
      <% } %>

  </nav>
</header>